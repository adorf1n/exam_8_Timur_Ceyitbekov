@model MyChat.Models.ForumTopic

@{
    ViewData["Title"] = "Создание новой темы";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Название темы</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>

    <div class="form-group">
        <label for="Description">Описание темы</label>
        <textarea class="form-control" id="Description" name="Description" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Создать тему</button>
</form>