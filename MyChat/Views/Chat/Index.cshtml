@model IEnumerable<ForumTopic> 

@{
    ViewData["Title"] = "Главная страница форума";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>




<div class="container mt-5">
    <h1 class="text-center mb-4">Темы форума</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название</th>
                <th>Автор</th>
                <th>Дата создания</th>
                <th></th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var topic in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", "Chat", new { id = topic.Id })" class="btn btn-info btn-sm">@topic.Title</a>

                    </td>
                    <td>@topic.User.UserName</td>
                    <td>@topic.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a href="@Url.Action("Details", "Chat", new { id = topic.Id })" class="btn btn-info btn-sm">Подробнее</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Chat")" class="btn btn-primary">Создать новую тему</a>
    </div>
</div>
